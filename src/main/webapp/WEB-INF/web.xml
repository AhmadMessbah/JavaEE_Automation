    <welcome-file-list>
        <welcome-file> </welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>InitialServlet</servlet-name>
        <servlet-class>com.mftplus.automation.controller.servlet.InitialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitialServlet</servlet-name>
        <url-pattern> </url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>403</error-code>
        <location>/error-jsp/403.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/error-jsp/404.jsp</location>
    </error-page>

    <!--    <error-page>-->
